{
  "openapi": "3.1.0",
  "info": {
    "title": "API do openBanking",
    "description": "Está API é feita com o intuito de simular um banco digital, onde é possível realizar transações, consultar saldo, extrato e etc.",
    "version": "1.0.0",
    "contact": {
      "name": "Suporte",
      "email": "guidu.dev@gmail.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3001",
      "description": "Servidor Local"
    }
  ],
  "tags": [
    {
      "name": "Usuário",
      "description": "Operações com usuário"
    },
    {
      "name": "Conta",
      "description": "Operações com conta"
    },
    {
      "name": "Transação",
      "description": "Operações com transação"
    }
  ],
  "paths": {
    "/users/register": {
      "post": {
        "tags": ["Usuário"],
        "summary": "Cria um novo usuário",
        "description": "Cria um novo usuário",
        "requestBody": {
          "description": "Objeto JSON que representa o usuário obs: os campos cpf e cnpj são opcionais, mas um deles é obrigatório",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "token de acesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Erro ao criar usuário",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/login": {
      "post": {
        "tags": ["Usuário"],
        "summary": "Realiza login do usuário",
        "description": "Realiza login do usuário",
        "requestBody": {
          "description": "Objeto JSON que representa a requisição de login",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "accountNumber": {
                    "description": "Número da conta",
                    "type": "string"
                  },
                  "agency": {
                    "description": "Número da agência",
                    "type": "string"
                  },
                  "password": {
                    "description": "Senha da conta",
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "token de acesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "usuário não encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "senha incorreta",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Erro ao realizar login",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/update": {
      "put": {
        "tags": ["Usuário"],
        "summary": "Atualiza os dados do usuário",
        "description": "Atualiza os dados do usuário",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "description": "Objeto JSON que representa o usuário",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Usuário atualizado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "400": {
            "description": "Erro ao atualizar usuário",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Não autorizado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "cpf": {
            "type": "string"
          },
          "cnpj": {
            "type": "string"
          }
        }
      },
      "Account": {
        "type": "object",
        "properties": {
          "agency": {
            "type": "string"
          },
          "accountNumber": {
            "type": "string"
          },
          "balance": {
            "type": "number"
          },
          "userId": {
            "type": "string"
          },
          "status": {
            "type": "boolean"
          },
          "limit": {
            "type": "number"
          }
        }
      }
    }
  }
}
